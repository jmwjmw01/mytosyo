<%= stylesheet_link_tag "inside/kuma.css", :media => "screen" %>
<h1>貸している本/借りている本</h1>

<%= link_to "本の貸出", new_rental_path, class: "btn btn-primary" %>

<hr>

<% if @rental.any? %>
<table class="table table-bordered table-hover">
  <thead>
     <tr class="info">
       <th>タイトル</th>
       <th>貸した人</th>
       <th>貸出日時</th>
       <th>返却処理</th>
     </tr>
  </thead>
  <tbody class="shiro">
    <% @rental.each do |r| %>
    <tr>
    <td><%= r.Book.title %></td>
    <td><%= r.Book.place %></td>
    <td><%= r.rental_date.in_time_zone('Tokyo') %></td>
    <td width="100" align="center">
      <%= link_to '返却', rental_path(r.id), method: :delete, data: { confirm: "この本を返却します。よろしいですか？" }, :class => "btn btn-danger" %>
    </td>
    </tr>
    <% end %>
  </tbody>
</table>
<% else %>
  <h4>No data yet.</h4>
<% end %>
